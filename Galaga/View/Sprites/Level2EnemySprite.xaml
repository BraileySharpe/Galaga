<local:BaseSprite
    x:Class="Galaga.View.Sprites.Level2EnemySprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="50"
    Width="50"
    Height="60">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BaseColor" Color="#F6F7F0"/>
        <SolidColorBrush x:Key="AccentColor" Color="#288BCB"/>
        <SolidColorBrush x:Key="WingColor" Color="#D62430"/>
        <SolidColorBrush x:Key="EyeColor" Color="#D62430"/>
        <SolidColorBrush x:Key="AntennaColor" Color="#288BCB"/>
    </UserControl.Resources>

    <Canvas>
        <Rectangle Width="5" Height="10" Fill="{StaticResource AccentColor}" Canvas.Left="18" Canvas.Top="7"/>
        <Rectangle Width="5" Height="10" Fill="{StaticResource AccentColor}" Canvas.Left="27" Canvas.Top="7"/>

        <Rectangle Width="14" Height="35" Fill="{StaticResource BaseColor}" Canvas.Left="18" Canvas.Top="17"/>
        <Rectangle Width="20" Height="10" Fill="{StaticResource BaseColor}" Canvas.Left="15" Canvas.Top="17"/>

        <Rectangle Width="14" Height="10" Fill="{StaticResource AccentColor}" Canvas.Left="18" Canvas.Top="32"/>
        <Rectangle Width="14" Height="5" Fill="{StaticResource AccentColor}" Canvas.Left="18" Canvas.Top="47"/>

        <Rectangle Width="5" Height="5" Fill="{StaticResource EyeColor}" Canvas.Left="18" Canvas.Top="17"/>
        <Rectangle Width="5" Height="5" Fill="{StaticResource EyeColor}" Canvas.Left="27" Canvas.Top="17"/>

        <Rectangle Width="10" Height="15" Fill="{StaticResource WingColor}" Canvas.Left="8" Canvas.Top="27"/>
        <Rectangle Width="10" Height="15" Fill="{StaticResource WingColor}" Canvas.Left="32" Canvas.Top="27"/>
        <Rectangle Width="13" Height="30" Fill="{StaticResource WingColor}" Canvas.Top="7"/>
        <Rectangle Width="13" Height="30" Fill="{StaticResource WingColor}" Canvas.Left="37" Canvas.Top="7"/>
        <Rectangle Width="5" Height="52" Fill="{StaticResource WingColor}" Canvas.Left="8"/>
        <Rectangle Width="5" Height="52" Fill="{StaticResource WingColor}" Canvas.Left="37"/>
        <Rectangle Width="13" Height="15" Fill="{StaticResource WingColor}" Canvas.Left="37" Canvas.Top="42"/>
        <Rectangle Width="13" Height="15" Fill="{StaticResource WingColor}" Canvas.Top="42"/>
        <Rectangle Width="5" Height="18" Fill="{StaticResource WingColor}" Canvas.Left="37" Canvas.Top="42"/>
        <Rectangle Width="5" Height="18" Fill="{StaticResource WingColor}" Canvas.Left="8" Canvas.Top="42"/>
    </Canvas>
</local:BaseSprite>
