<local:BaseSprite
    x:Class="Galaga.View.Sprites.PlayerBulletSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="12"
    Height="40"
    Width="12">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BulletTip" Color="#FF0000"/>
        <SolidColorBrush x:Key="BulletBase" Color="#0043fe"/>
        <SolidColorBrush x:Key="BulletAccent" Color="#FFFFFF"/>
    </UserControl.Resources>

    <Canvas>
        <Rectangle Width="4" Height="10" Fill="{StaticResource BulletAccent}" Canvas.Left="4" Canvas.Top="10"/>

        <Rectangle Width="4" Height="15" Fill="{StaticResource BulletBase}" Canvas.Left="4"/>
        <Rectangle Width="4" Height="10" Fill="{StaticResource BulletBase}" Canvas.Left="8" Canvas.Top="10"/>
        <Rectangle Width="4" Height="10" Fill="{StaticResource BulletBase}" Canvas.Top="10"/>

        <Rectangle Width="4" Height="20" Fill="{StaticResource BulletTip}" Canvas.Left="4" Canvas.Top="20"/>
    </Canvas>
</local:BaseSprite>
