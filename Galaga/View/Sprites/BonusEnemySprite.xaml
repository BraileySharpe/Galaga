            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90" TranslateX="-15" TranslateY="25" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Width="4" Height="8" Fill="{StaticResource ResourceKey=BonusAntennaColor}" Canvas.Left="19"
                   RenderTransformOrigin="0.5,0.5" Canvas.Top="9" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Rectangle.RenderTransform>
