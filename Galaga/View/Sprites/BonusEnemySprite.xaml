        <SolidColorBrush x:Key="BonusAntennaColor" Color="#FF1744" />
    </UserControl.Resources>

    <Canvas>
        <Rectangle Width="60" Height="6" Fill="{StaticResource ResourceKey=BonusWingColor}" Canvas.Top="31"
                   Canvas.Left="-5" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Width="4" Height="46" Fill="{StaticResource BonusBaseColor}" Canvas.Left="23" Canvas.Top="13"
                   RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90" TranslateX="-2" TranslateY="-2" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Width="12" Height="6" Fill="{StaticResource ResourceKey=BonusBaseColor}" Canvas.Left="19"
                   Canvas.Top="25" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90" TranslateX="6" TranslateY="6" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Width="60" Height="4" Fill="{StaticResource ResourceKey=BonusBaseColor}" Canvas.Top="29"
