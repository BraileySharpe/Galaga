<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:custom="using:Galaga.View.Sprites"
    x:Class="Galaga.View.GameCanvas"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="720" Height="600" Background="Black">
        <TextBlock Text="HIGH" Height="17" Width="58" FontFamily="ModeNine" FontWeight="Bold" Canvas.Left="614"
                   FontSize="20" Foreground="#FFD01919" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Canvas.Top="11" />
        <TextBlock Text="SCORE" Height="17" Width="64" FontFamily="ModeNine" FontWeight="Bold" Canvas.Left="632"
                   FontSize="20" Foreground="#FFD01919" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Canvas.Top="31" />
        <TextBlock x:Name="scoreTextBlock" Text="{Binding Score, Mode=OneWay}" Height="31" Width="79" FontFamily="ModeNine" FontWeight="Bold"
                   Canvas.Left="614" Canvas.Top="57" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Foreground="White" TextAlignment="Right" />
        <TextBlock x:Name="gameOverTextBlock" Text="GAME OVER" Visibility="Collapsed" FontFamily="ModeNine"
                   FontWeight="Bold" FontSize="50" Canvas.Left="221" Canvas.Top="275" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" Width="315" />
        <TextBlock x:Name="youWinTextBlock" Text="YOU WIN!" Visibility="Collapsed" FontFamily="ModeNine"
                   FontWeight="Bold" FontSize="50" Canvas.Left="237" Canvas.Top="275" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <custom:PlayerLifeIcon Canvas.Left="682" Canvas.Top="172" />
        <custom:PlayerLifeIcon Canvas.Left="648" Canvas.Top="172" />
        <custom:PlayerLifeIcon Canvas.Left="614" Canvas.Top="172" />
    </Canvas>
</Page>