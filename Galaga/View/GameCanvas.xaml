<Page
    x:Class="Galaga.View.GameCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="640" Height="480" Background="Black">
        <TextBlock Text="SCORE" Height="31" Width="63" FontFamily="ModeNine" FontWeight="Bold" Canvas.Left="568"
                   Canvas.Top="10" FontSize="20" Foreground="#FFD01919" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <TextBlock x:Name="scoreTextBlock" Text="0" Height="31" Width="79" FontFamily="ModeNine" FontWeight="Bold"
                   Canvas.Left="551" Canvas.Top="36" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Foreground="White" TextAlignment="Right" />
        <TextBlock x:Name="gameOverTextBlock" Text="GAME OVER" Visibility="Collapsed" FontFamily="ModeNine"
                   FontWeight="Bold" FontSize="50" Canvas.Left="166" Canvas.Top="215" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" Width="315" />
        <TextBlock x:Name="youWinTextBlock" Text="YOU WIN!" Visibility="Collapsed" FontFamily="ModeNine"
                   FontWeight="Bold" FontSize="50" Canvas.Left="197" Canvas.Top="215" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Canvas>
</Page>